{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    //experimentalDecorators is for decorator
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}
